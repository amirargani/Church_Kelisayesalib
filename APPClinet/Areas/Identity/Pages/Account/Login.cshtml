@page
@model LoginModel
@{
    var faTitleLogin = APPClinet.Messages.faMessage.TitleLogin.ToString();
    ViewData["Title"] = faTitleLogin;
    Layout = "~/Areas/Identity/Pages/Account/_AuthrtlLayout.cshtml";
    var faWith = APPClinet.Messages.faMessage.With.ToString();
    var faButtonLogin = APPClinet.Messages.faMessage.ButtonLogin.ToString();
    var faEmail = APPClinet.Messages.faMessage.Email.ToString();
    var faPassword = APPClinet.Messages.faMessage.Password.ToString();
    var faRememberMe = APPClinet.Messages.faMessage.RememberMe.ToString();
    var faForgotPassword = APPClinet.Messages.faMessage.ForgotPassword.ToString();
    var faTitleRegister = APPClinet.Messages.faMessage.TitleRegister.ToString();
    var titleappen = APPClinet.Messages.TitleApp.app_en.ToString();
    var titleappfa = APPClinet.Messages.TitleApp.app_fa.Replace(" - ", "").ToString();
}

<!-- Hero Start -->
<div class="row">
    <div class="col-12">
        <div class="card login-page border-0 shadow" style="z-index: 1">
            <div class="card-body p-5">
                <h6 class="card-title text-center mb-0">@faTitleLogin&nbsp;<span class="text-primary font-weight-bold">@titleappfa</span></h6>
                <form class="login-form mt-4" id="login-form" method="post">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group position-relative">
                                <label asp-for="Input.Email">@faEmail</label>
                                <i class="far fa-envelope icon-sm icons"></i>
                                <input type="email" asp-for="Input.Email" class="form-control pl-5 fen" placeholder="">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div><!--end col-->

                        <div class="col-lg-12">
                            <div class="form-group position-relative">
                                <label asp-for="Input.Password">@faPassword</label>
                                <i class="fas fa-lock icon-sm icons"></i>
                                <input type="password" asp-for="Input.Password" class="form-control pl-5 fen" placeholder="">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div><!--end col-->

                        <div class="col-lg-12">
                            <div class="d-flex justify-content-between">
                                <div class="form-group">
                                    <div class="custom-control custom-switch">
                                        <div class="form-group mb-0">
                                            <input type="checkbox" asp-for="Input.RememberMe" class="custom-control-input" id="customSwitch1">
                                            <label asp-for="Input.RememberMe" class="custom-control-label" for="customSwitch1">@faRememberMe</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!--end col-->

                        <div class="col-lg-12 mb-0">
                            <button class="btn btn-primary btn-block">@faButtonLogin</button>
                        </div><!--end col-->
                        @*<div class="col-lg-12 mt-4 text-center">
                                <h5>@faWith</h5>
                                <ul class="list-unstyled social-icon mb-0 mt-3">
                                    <li class="list-inline-item"><a href="#" target="_blank" class="btn btn-icon btn-pills btn-danger mt-2"><i class="fa fa-google"></i></a></li>
                                    <li class="list-inline-item"><a href="#" target="_blank" class="btn btn-icon btn-pills btn-primary mt-2"><i class="fa fa-facebook"></i></a></li>
                                    <li class="list-inline-item"><a href="#" target="_blank" class="btn btn-icon btn-pills btn-dark mt-2"><i class="fa fa-instagram"></i></a></li>
                                </ul><!--end icon-->
                            </div><!--end col-->*@

                    <div class="col-12 text-center">
                        <p class="forgot-pass mb-0 mt-3"><i class="fa fa-lock mr-2 text-danger"></i><a asp-page="./ForgotPassword" class="text-dark font-weight-bold">@faForgotPassword</a></p>
                        <p class="mb-0 mt-3"><i class="fa fa-user-plus mr-2"></i><b class="text-dark mr-2">شما حساب ندارید؟</b><a asp-page="./Register" class="text-primary font-weight-bold f15">@faTitleRegister</a></p>
                    </div><!--end col-->
                    </div><!--end row-->
                </form>
            </div>
        </div>
    </div><!--end col-->
</div><!--end row-->
<!-- Hero End -->
@section Scripts {
    @if (Model.ErrorMessage != null)
    {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
        <script>
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            })

            Toast.fire({
                icon: 'error',
                title: '@Model.ErrorMessage'
            })
        </script>
    }
    <partial name="_ValidationScriptsPartial" />
}