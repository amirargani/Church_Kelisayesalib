@page
@model APPClinet.Areas.Identity.Pages.Account.Dashboard.User.Settings.NewsletterModel
@{
    var faNewsletter = APPClinet.Messages.faMessage.Newsletter.ToString();
    ViewData["Title"] = faNewsletter;
    Layout = "~/Areas/Identity/Pages/Account/Dashboard/User/_UserNavrtl.cshtml";
    var faButtonActivePassive = APPClinet.Messages.faMessage.ButtonActivePassive.ToString();
    var faButtonSave = APPClinet.Messages.faMessage.ButtonSave.ToString();
}
<div class="p-0 mb-2">
    <div class="row">
        <div class="col-sm-5">
            <h2 class="text-left">@faNewsletter</h2>
        </div>
        <div class="col-sm-7">
        </div>
    </div>
</div>
<div class="dropdown-divider"></div>
@*<partial name="_StatusMessage" model="Model.StatusMessage" />*@
<form class="newsletter-form mt-4" id="newsletter-form" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex justify-content-between">
                <div class="form-group">
                    <div class="custom-control custom-switch">
                        <div class="form-group mb-0">
                            <input type="checkbox" asp-for="Input.Newsletter" class="custom-control-input" id="customSwitch1">
                            <label asp-for="Input.Newsletter" class="custom-control-label" for="customSwitch1">@faButtonActivePassive</label>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--end col-->

        <div class="col-lg-12 mb-0">
            <button class="btn btn-primary btn-block">@faButtonSave</button>
        </div><!--end col-->
    </div><!--end row-->
</form>