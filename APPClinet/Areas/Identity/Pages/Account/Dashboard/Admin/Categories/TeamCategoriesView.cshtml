@if (Model.pages.teamCategories.Count() > 0)
{
    <form method="post">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">@faTitleCategory</th>
                    <th scope="col"><span class="text-success">@faPlus</span>&nbsp;/&nbsp;<span class="text-danger">@faMinus</span></th>
                    <th scope="col">@faEdit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.pages.teamCategories)
                {
                    string bg = "";
                    if (item.ActivePassive == false)
                    {
                        bg = "background-color: #ffeaed;";
                    }
                    <tr class="font-weight-bold" style="font-size: 0.83rem !important; @bg">
                        <th scope="row">@count</th>
                        <td>@item.TitleCategory</td>
                        <td>
                            @{
                                if (item.ActivePassive == false)
                                {
                                    <button asp-page-handler="Active" asp-route-id="@item.Id" class="btn btn-icon btn-sm btn-success"><i class="fas fa-check"></i></button>
                                }
                                else
                                {
                                    <button asp-page-handler="Inactive" asp-route-id="@item.Id" class="btn btn-icon btn-sm btn-danger"><i class="fas fa-times"></i></button>
                                }
                            }
                        </td>
                        <td>
                            <button asp-page="TeamCategoryEdit" asp-route-id="@item.Id" class="btn btn-icon btn-sm btn-info"><i class="fas fa-edit"></i></button>
                        </td>
                    </tr>
                    count = count + 1;
                }
            </tbody>
        </table>
    </form>
}
else
{
    <div class="alert alert-danger" role="alert">
        <h6 class="text-center mb-0"><span class="text-white font-weight-bold">@faCategoriesNotfound</span></h6>
    </div>
}
<div class="p-0 mt-5">
    <div class="row">
        <div class="col-sm-12 text-center">
            <a class="btn btn-outline-info font-weight-bold" href="/Identity/Account/Dashboard/Admin/SubCategories/TeamSubCategoriesView"><i class="fas fa-eye mr-2"></i>@faSubCategoriesView</a>
        </div>
    </div>
</div>
<!-- PAGINATION START -->
@*href="javascript:void(0)"*@
@if (Model.pages.PageCount > 1)
{
    <div class="col-12 pt-md-4 pt-5">
        <ul class="pagination justify-content-center mb-0">
            @if (Model.pages.CurrentPage > 1)
            {
                <li class="page-item"><a class="page-link" href="/Identity/Account/Dashboard/Admin/Categories/TeamCategoriesView?pageid=@(Model.pages.CurrentPage - 1)" aria-label="Previous">@faPrev</a></li>
            }
            @for (int i = 1; i <= Model.pages.PageCount; i++)
            {
                <li class="page-item @((i == Model.pages.CurrentPage)? "active" : "")">
                    @if (i == Model.pages.CurrentPage)
                    {
                        <span class="page-link" style="cursor: default;">@i</span>
                    }
                    @if (i != Model.pages.CurrentPage)
                    {
                        <a class="page-link" href="/Identity/Account/Dashboard/Admin/Categories/TeamCategoriesView?pageid=@i">@i</a>
                    }
                </li>
            }
            @if (Model.pages.CurrentPage < Model.pages.PageCount)
            {
                <li class="page-item"><a class="page-link" href="/Identity/Account/Dashboard/Admin/Categories/TeamCategoriesView?pageid=@(Model.pages.CurrentPage + 1)" aria-label="Next">@faNext</a></li>
            }
        </ul>
    </div>
}
<!-- PAGINATION END -->