@if (Model.pages.courseDetails.Count() > 0)
{
    <form method="post">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th><i class="fas fa-eye mr-2 f10"></i></th>
                    <th></th>
                    @*<th scope="col">@faTitleCategory</th>*@
                    @*<th scope="col">@faTitleSubCategory</th>*@
                    <th scope="col"><span class="text-success">@faPlus</span>&nbsp;/&nbsp;<span class="text-danger">@faMinus</span></th>
                    <th scope="col">@faEdit</th>
                    @*<th scope="col">@faEmail</th>*@
                    <th scope="col"><i class="fas fa-file-video mr-2 f10"></i></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.pages.courseDetails)
                {
                    string bg = "";
                    if (item.ActivePassive == false)
                    {
                        bg = "background-color: #ffeaed;";
                    }
                    <tr class="font-weight-bold" style="font-size: 0.83rem !important; @bg">
                        <th scope="row">@count</th>
                        <td>@if (item.CountViews == null){<span>0</span>}@if (item.CountViews > 0){<span>@item.CountViews</span>}</td>
                        <th><span class="text-secondary f15">@item.Title</span><br />@item.Tbl_CourseCategories.TitleCategory<i class="fas fa-chevron-down ml-2"></i><br /><b><i class="fas fa-caret-left mr-2"></i>@item.Tbl_CourseSubCategories.TitleSubCategory</b><br /><b class=" text-blue fen f10n">@item.AspNetUsers.UserName</b></th>
                        @*<td>@item.Tbl_ChurchCategories.TitleCategory</td>*@
                        @*<td>@item.Tbl_ChurchSubCategories.TitleSubCategory</td>*@
                        <td>
                            @{
                                if (item.ActivePassive == false)
                                {
                                    <button asp-page-handler="Active" asp-route-id="@item.Id" class="btn btn-icon btn-sm btn-success"><i class="fas fa-check"></i></button>
                                }
                                else
                                {
                                    <button asp-page-handler="Inactive" asp-route-id="@item.Id" class="btn btn-icon btn-sm btn-danger"><i class="fas fa-times"></i></button>
                                }
                            }
                        </td>
                        <td>
                            @{
                                if (item != null)
                                {
                                    <a href="/Identity/Account/Dashboard/Admin/Details/CourseDetailEdit?id=@item.Id" class="btn btn-icon btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                }
                            }
                        </td>
                        @*<td class="fen">@item.AspNetUsers.UserName</td>*@
                        <td>
                            <a href="/Identity/Account/Dashboard/Admin/Details/CourseVideoAdd?id=@item.Id" class="btn btn-icon btn-sm btn-primary"><i class="fas fa-plus"></i></a>
                            <a href="/Identity/Account/Dashboard/Admin/Details/CourseVideosView?id=@item.Id" class="btn btn-icon btn-sm btn-secondary"><i class="fas fa-file-video"></i></a>

                        </td>
                    </tr>
                    count = count + 1;
                }
            </tbody>
        </table>
    </form>
}
else
{
    <div class="alert alert-danger" role="alert">
        <h6 class="text-center mb-0"><span class="text-white font-weight-bold">@faSubCategoriesNotfound</span></h6>
    </div>
}
