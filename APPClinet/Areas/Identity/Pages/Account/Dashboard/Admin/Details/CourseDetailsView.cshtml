@if (Model.pages.PageCount > 1)
{
    <div class="col-12 pt-md-4 pt-5">
        <ul class="pagination justify-content-center mb-0">
            @if (Model.pages.CurrentPage > 1)
            {
                <li class="page-item"><a class="page-link" href="/Identity/Account/Dashboard/Admin/Details/CourseDetailsView?pageid=@(Model.pages.CurrentPage - 1)" aria-label="Previous">@faPrev</a></li>
            }
            @for (int i = 1; i <= Model.pages.PageCount; i++)
            {
                <li class="page-item @((i == Model.pages.CurrentPage)? "active" : "")">
                    @if (i == Model.pages.CurrentPage)
                    {
                        <span class="page-link" style="cursor: default;">@i</span>
                    }
                    @if (i != Model.pages.CurrentPage)
                    {
                        <a class="page-link" href="/Identity/Account/Dashboard/Admin/Details/CourseDetailsView?pageid=@i">@i</a>
                    }
                </li>
            }
            @if (Model.pages.CurrentPage < Model.pages.PageCount)
            {
                <li class="page-item"><a class="page-link" href="/Identity/Account/Dashboard/Admin/Details/CourseDetailsView?pageid=@(Model.pages.CurrentPage + 1)" aria-label="Next">@faNext</a></li>
            }
        </ul>
    </div>
}
<!-- PAGINATION END -->