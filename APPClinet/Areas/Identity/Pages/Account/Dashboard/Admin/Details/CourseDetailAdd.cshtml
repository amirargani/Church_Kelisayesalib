<form class="coursedetailadd-form mt-4" id="coursedetailadd-form" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group position-relative">
                <label asp-for="TitleCategory">@faTitleCategory</label>
                <i class="fas fa-list-alt icon-sm icons"></i>
                <select asp-for="CategoryId" class="form-control custom-select" disabled>
                    <option value="@Model.CategoryId">@Model.TitleCategory</option>
                </select>
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <div class="form-group position-relative">
                <label asp-for="TitleSubCategory">@faTitleSubCategory</label>
                <i class="far fa-list-alt icon-sm icons"></i>
                <select asp-for="SubCategoryId" class="form-control custom-select" disabled>
                    <option value="@Model.SubCategoryId">@Model.TitleSubCategory</option>
                </select>
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <div class="form-group position-relative">
                <label asp-for="Input.Title"></label>
                <i class="far fa-address-book icon-sm icons"></i>
                <input type="text" asp-for="Input.Title" class="form-control pl-5" placeholder="">
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <strong class="text-danger f15 fen" style="float: left;">800x533 px</strong><br />
            <div class="form-group position-relative">
                <div class="mb-2">
                    <strong class="text-dark">@faImage</strong><br />
                    <label asp-for="Input.ImageLink" class="text-black-50">@faSelectFile&nbsp;<span class="text-danger">:&nbsp;<b>jpg</b></span></label>
                    <br /><strong class="text-warning">@faSizeImage</strong>
                </div>
                <input type="file" asp-for="Input.ImageLink" name="ImageLink" class="form-control-file" id="file" hidden>
                <label for="file" class="btn btn-light js-labelFile">
                    <i class="far fa-image text-danger"></i>
                    <span class="js-fileName">@faSelectImage</span>
                </label>
                <span asp-validation-for="Input.ImageLink" class="text-danger"></span>
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <strong class="text-danger f15 fen" style="float: left;">1903x1070 px</strong><br />
            <div class="form-group position-relative">
                <div class="mb-2">
                    <strong class="text-dark">@faImageBackground</strong><br />
                    <label asp-for="Input.Image" class="text-black-50">@faSelectFile&nbsp;<span class="text-danger">:&nbsp;<b>jpg</b></span></label>
                    <br /><strong class="text-warning">@faSizeImage</strong>
                </div>
                <input type="file" asp-for="Input.Image" name="Image" class="form-control-file" id="file1" hidden>
                <label for="file1" class="btn btn-light js-labelFile">
                    <i class="far fa-image text-danger"></i>
                    <span class="js-fileName">@faSelectImage</span>
                </label>
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <div class="form-group position-relative">
                <label asp-for="Input.Text">@faText</label>
                <textarea asp-for="Input.Text" class="form-control pl-5" placeholder="" rows="3" id="ckeditor"></textarea>
                <span asp-validation-for="Input.Text" class="text-danger"></span>
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <div class="form-group position-relative">
                <label asp-for="Input.Email">@faEmail</label>
                <i class="fas fa-envelope icon-sm icons"></i>
                <input type="email" asp-for="Input.Email" class="form-control pl-5 fen" placeholder="">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <strong class="text-danger f15 fen" style="float: left;">+49 16X XXXXXXX | +49 17X XXXXXXXX</strong><br />
            <div class="form-group position-relative">
                <label asp-for="Input.PhoneNumber">@faPhoneNumber</label>
                <i class="fas fa-mobile icon-sm icons"></i>
                <input type="tel" asp-for="Input.PhoneNumber" class="form-control pl-5 fen" placeholder="">
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <strong class="text-danger f15 fen" style="float: left;">+49 4XX XXXXXXX</strong><br />
            <div class="form-group position-relative">
                <label asp-for="Input.PrivateNumber">@faPrivateNumber</label>
                <i class="fas fa-phone icon-sm icons"></i>
                <input type="tel" asp-for="Input.PrivateNumber" class="form-control pl-5 fen" placeholder="">
                <span asp-validation-for="Input.PrivateNumber" class="text-danger"></span>
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <div class="form-group position-relative">
                <label asp-for="Input.Telegram">@faTelegram</label>
                <i class="fab fa-telegram icon-sm icons"></i>
                <input type="text" asp-for="Input.Telegram" class="form-control pl-5 fen" placeholder="">
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <div class="form-group position-relative">
                <label asp-for="Input.Youtube">@faYoutube</label>
                <i class="fab fa-youtube icon-sm icons"></i>
                <input type="text" asp-for="Input.Youtube" class="form-control pl-5 fen" placeholder="">
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <div class="form-group position-relative">
                <label asp-for="Input.Instagram">@faInstagram</label>
                <i class="fab fa-instagram-square icon-sm icons"></i>
                <input type="text" asp-for="Input.Instagram" class="form-control pl-5 fen" placeholder="">
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <div class="form-group position-relative">
                <label asp-for="Input.Twitter">@faTwitter</label>
                <i class="fab fa-twitter icon-sm icons"></i>
                <input type="text" asp-for="Input.Twitter" class="form-control pl-5 fen" placeholder="">
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <div class="form-group position-relative">
                <label asp-for="Input.Facebook">@faFacebook</label>
                <i class="fab fa-facebook-square icon-sm icons"></i>
                <input type="text" asp-for="Input.Facebook" class="form-control pl-5 fen" placeholder="">
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <div class="form-group position-relative">
                <label asp-for="Input.Website">@faWebsite</label>
                <i class="fas fa-link icon-sm icons"></i>
                <input type="text" asp-for="Input.Website" class="form-control pl-5 fen" placeholder="">
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <strong class="text-dark f15 fen" style="float: left;">https://www.youtube.com/embed/<span class="text-danger">xxxxxxxx</span></strong><br />
            <strong class="text-dark f15 fen" style="float: left;">https://www.youtube.com/embed/<span class="text-danger">videoseries?list=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</span></strong><br />
            <div class="form-group position-relative">
                <label asp-for="Input.YoutubeLink">@faYoutubeLink</label>
                <i class="fab fa-youtube icon-sm icons"></i>
                <input type="text" asp-for="Input.YoutubeLink" class="form-control pl-5 fen" placeholder="">
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <div class="form-group position-relative">
                <label asp-for="Input.EmbedLinkGoogleMap">@faEmbedLinkGoogleMap</label>
                <i class="fas fa-map icon-sm icons"></i>
                <input type="text" asp-for="Input.EmbedLinkGoogleMap" class="form-control pl-5 fen" placeholder="">
            </div>
        </div><!--end col-->

        <div class="col-lg-12">
            <div class="d-flex justify-content-between">
                <div class="form-group">
                    <div class="custom-control custom-switch">
                        <div class="form-group mb-0">
                            <input type="checkbox" asp-for="Input.ActivePassive" class="custom-control-input" id="customSwitch1" checked>
                            <label asp-for="Input.ActivePassive" class="custom-control-label" for="customSwitch1">@faButtonActivePassive</label>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--end col-->


        <div class="col-lg-12 mb-0">
            <button class="btn btn-primary btn-block">@faButtonSave</button>
        </div><!--end col-->
    </div><!--end row-->
</form>
@section Scripts {
    @await Html.PartialAsync("~/Views/Shared/_UploadJavaScript.cshtml")
    @await Html.PartialAsync("~/Views/Shared/_CKEditorJavaScript.cshtml")
    <partial name="_ValidationScriptsPartial" />
}