<script>
        $(document).ready(function () {
            $('table .btn-success').on('click', function () {
                var id = $(this).parent().find('#id').val();
                $.ajax({
                    type: 'GET',
                    data: { id: id },
                    url: '@Url.Page("CourseDetailsInfoView", "Views")',
                    success: function (result) {
                        $('table tr #view-' + id).html(result.countViews);
                    }
                });
            });
        });
</script>